
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
    <form method="post" action="/home/Login">
        <h2>فرم ورود</h2>
        <div class="form-group">
            <label>نام کاربری</label>
            <div>
                <input type="text" name="_Name" class="form-control" placeholder="نام کاربری" />

            </div>
        </div>
        <div class="form-group">
            <label>کلمه عبور</label>
            <div>
                <input type="text" name="_Pass" class="form-control" placeholder="کلمه عبور" />

            </div>
        </div>
        <button>ورود</button>
        <p style="color:red">


        @ViewBag.Error
        </p>
    </form>
</div>

